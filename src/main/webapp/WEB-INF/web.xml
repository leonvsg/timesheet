<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Users</display-name>
    <servlet>
        <servlet-name>user</servlet-name>
        <servlet-class>ru.leonvsg.education.timesheet.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>user</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <display-name>Auth User</display-name>
    <servlet>
        <servlet-name>auth_user</servlet-name>
        <servlet-class>ru.leonvsg.education.timesheet.servlets.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>auth_user</servlet-name>
        <url-pattern>/user/auth</url-pattern>
    </servlet-mapping>

    <display-name>Groups</display-name>
    <servlet>
        <servlet-name>group</servlet-name>
        <servlet-class>ru.leonvsg.education.timesheet.servlets.GroupServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>group</servlet-name>
        <url-pattern>/group</url-pattern>
    </servlet-mapping>

    <display-name>Course</display-name>
    <servlet>
        <servlet-name>course</servlet-name>
        <servlet-class>ru.leonvsg.education.timesheet.servlets.CourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>course</servlet-name>
        <url-pattern>/course</url-pattern>
    </servlet-mapping>

</web-app>